@import "lib/core.fn"

.Teams-findteam
  bg                        color, #3c3b58
  bg                        image, linear-gradient(-180deg,#3c3c57 11%,#8598be 100%)

  a
    color                   #56a2d3
    text-decoration         none

  .logo-header
    bg                      color, #3C3D58
    height                  69px
    width                   100%
    z-index                 2
    abs                     0, 0, auto, 0
    border-bottom           1px solid rgba(0,0,0,.15)
    display                 flex

    a
      display               flex
      padding-left          40px
      padding-right         40px

    img
      width                 95px

  .TeamsModal
    margin-top              180px
    size                    480px, 330px
    padding-top             38px

    h4
      font-size             27px
      line-height           32px
      color                 #f2778a
      font-weight           normal

    h5
      font-size             18px
      letter-spacing        .21px
      line-height           27px
      color                 #a59999

    .login-form
      margin-top            40px !important

    .login-input-view
      width                 400px !important
      margin                0 auto

      input.kdinput
        border              1px solid #d9d9d9
        font-size           18px
        letter-spacing      .35px
        color               #4a4a4a !important

      &.validation-error input.kdinput
        border-width        1px !important

    .TeamsModal-button
      margin                0 auto
      bg                    color, #f2778a
      color                 #fff
      rounded               4px
      width                 400px
      font-size             18px
      line-height           21px
      margin-bottom         25px

    .back-link
      font-size             14px
      line-height           17px

  .additional-info
    margin-top              40px
    color                   #fff
    font-size               14px
    line-height             17px
    text-align              center
